# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pharmacrm
DB_USER=pharmacrm_user
DB_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRY=8h
JWT_REFRESH_EXPIRY=7d

# AI Services
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=change_me

# Encryption (for PII fields)
ENCRYPTION_KEY=32_byte_hex_key_change_in_production
